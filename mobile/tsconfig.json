{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noEmitOnError": false,
        "rootDir": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "inlineSourceMap": true
    },
    "files": [
        "app/app.ts",
        "app/compat.d.ts",
        "app/main-page.ts",
        "node_modules/tns-core-modules/tns-core-modules.d.ts"
    ],
    "filesGlob": [
        "node_modules/tns-core-modules/tns-core-modules.d.ts",
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}